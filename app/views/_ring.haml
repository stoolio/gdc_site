- src = image(ring.collection, ring.main_view)
- url = url("/engagement-rings/#{ring.model}/")
- desc = "#{ring.get('description')} - Model #{ring.model}: From #{ring.display_price}"
%article.engagement-ring{ class: classify([ring.diamond, ring.get("categories"), ring.get("vendor")]), data: { price: ring.from_price } }

  .entry-header
    %span.left.pinterest-button
      = partial :'social/pin_button', locals: { url: url,
                                              img: url(image(ring.collection, ring.main_view, :full)),
                                              desc: desc}
    %span.right.favorite-button
      = partial :favorite_button

  .entry-summary
    %a{ href: url, title: ring.name }
      %img.lazy{ src: '/img/white.gif', data: { original: src } }

  %footer.entry-footer.text-center
    %span.entry-meta
      = "From #{ring.display_price}"
