- @crumb = @title = @ring.name

.row
  .large-8.columns
    .row
      .medium-8.large-12.columns
        %div.ring-large
          %img{ src: sareen_image(@ring.collection, @ring.main_view, :full) }
      .medium-4.large-12.columns
        %ul.small-block-grid-3.medium-block-grid-2.large-block-grid-3.ring-thumbs
          - @ring.views.each_with_index do |view, i|
            %li
              %a.th.radius{ href: sareen_image(@ring.collection, view, :full) }
                %img{ src: sareen_image(@ring.collection, view), title: "#{@ring.name} #{i}" }
  .large-4.columns
    = partial :pricing_table
