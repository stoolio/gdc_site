- @title = @ring.name
- add_crumb('Engagment Rings', url('/engagement-rings'))
- crumb

.row
  .large-8.columns
    -# src = "/img/sareen/#{tagify(ring.collection)}/thumb/#{ring.view}"
    -# title: ring.name }
    .row
      .medium-8.large-12.columns.show-for-medium-up
        %div.ring-large
          %img{ src: sareen(@ring.collection, @ring.main_view, :full) }
      .small-10.small-centered.medium-4.large-12.columns
        %ul.small-block-grid-1.medium-block-grid-2.large-block-grid-3.ring-thumbs
          - @ring.views.each_with_index do |view, i|
            %li
              %a.th.radius{ href: sareen(@ring.collection, view, :full) }
                %img{ src: sareen(@ring.collection, view), title: "#{@ring.name} #{i}" }
  .large-4.columns
    %ul.pricing-table
      %li.title #{@ring.name}
      %li.price From #{@ring.display_price}
      %li.description #{@ring.get('description')}
      %li.bullet-item Shown with #{titlecase(@ring.diamond)} Center Stone
      %li.bullet-item
        #{@ring.get('total stones')} #{titlecase(@ring.all_side_stones)} Side Stones
        %br
        #{@ring.tcw}ct Total Weight
      %li.bullet-item From the #{@ring.get('vendor')} #{@ring.collection} Collection
      %li.bullet-item Featuring a #{@ring.style} Design
      %li.bullet-item
        - if @ring.tapered?
          Width: #{@ring.top_width}mm
        - else
          Tapered from #{@ring.top_width}mm to #{@ring.tapered_width}mm
      %li.bullet-item Model ##{@ring.model}
      %li.cta-button
        %form#ring-interest{ action: '/', method: 'post', data: { type: 'ring_request' } }
          %input{ type: 'hidden', value: @ring.model }
          %label
            Available Metals
            %select
              - @ring.prices.each do |metal, price|
                next if price == "N/A"
                %option{ value: metal } #{metal}: #{to_price(price)}
          %a.button{ href: url('#') } I like this ring!

- content_for :scripts do
  %script{ src: '/js/eringdetail.js' }
