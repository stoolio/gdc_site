- @title = 'Engagement Rings'
- content_for :scripts do
  %script{ type: 'text/javascript', src: '//assets.pinterest.com/js/pinit.js' }

.row.text-center
  .large-12.columns.clearfix
    .filters.large-6.columns.left
      %h4 Select A Designer
      %dl.sub-nav{ data: { filter_group: 'ven' }, style: 'margin: 0 auto;width: 260px;' }
        %dd{ data: { filter: '.gale-diamonds' } }
          %a{ src: '#' } Gale Diamonds
        %dd{ data: { filter: '.sareen' } }
          %a{ src: '#' } Sareen
    .sorts.large-6.columns.right
      %h4 Sort by Price
      %dl.sub-nav{ data: {sort_by: 'price'} }
        %dd{ data: {sort_asc: true} }
          %a{ src: '#' } Lease Expensive
        %dd{ data: {sort_desc: true} }
          %a{ src: '#' } Most Expensive
        %dd{ data: {reset_sort: true} }
          %a{ src: '#' } Reset
      / %dl.sub-nav{ data: {filter_group: 'style'} }
      /   %dt By Style
      /   %dd{ data: { filter: '.Tension'} }
      /     %a{ src: '#' } Tension Setting
      /   %dd{ data: { filter: '.solitaire'} }
      /     %a{ src: '#' } Solitaire
      /   %dd{ data: { filter: '.antique'} }
      /     %a{ src: '#' } Antique
      /   %dd{ data: { filter: '.bezel'} }
      /     %a{ src: '#' } Bezel Set
    %hr{ style: 'margin-bottom: 5px;'}
.row.text-center
  .filters.large-6.columns
    %h4 Collections
    %dl.sub-nav.gale-diamonds-collections{ data: { filter_group: 'gdc' }, style: 'display: none;' }
      %dd{ data: { filter: '.antique'} }
        %a{ src: '#' } Antique
      %dd{ data: { filter: '.colored-stone'} }
        %a{ src: '#' } Colored Stone
      %dd{ data: { filter: '.halo'} }
        %a{ src: '#' } Halo
      %dd{ data: { filter: '.signature'} }
        %a{ src: '#' } Signature
      %dd{ data: { filter: '.solitaire'} }
        %a{ src: '#' } Solitaire
      %dd{ data: { filter: '.three-stone'} }
        %a{ src: '#' } Three Stone
    %dl.sub-nav.sareen-collections{ data: { filter_group: 'sar'}, style: 'display: none;' }
      %dd{ data: { filter: '.tension'} }
        %a{ src: '#' } Tension
      %dd{ data: { filter: '.colored-tension'} }
        %a{ src: '#' } Colored Tension
      %dd{ data: { filter: '.dianes-tiara'} }
        %a{ src: '#' } Diane's Tiara
      %dd{ data: { filter: '.luseen-a'} }
        %a{ src: '#' } Luseen
      %dd{ data: { filter: '.royal-cup'} }
        %a{ src: '#' } Royal Cup
      %dd{ data: { filter: '.papion'} }
        %a{ src: '#' } Papion
      %dd{ data: { filter: '.handmade-3-stone'} }
        %a{ src: '#' } Handmade 3 Stone
      %dd{ data: { filter: '.bezel'} }
        %a{ src: '#' } Bezel
  .filters.large-6.columns
    %h4 Filter By Shape
    %dl.sub-nav{ data: {filter_group: 'sha'} }
      %dd{ data: { filter: '.round'} }
        %a{ src: '#' } Round
      %dd{ data: { filter: '.princess'} }
        %a{ src: '#' } Princess
      %dd{ data: { filter: '.radiant'} }
        %a{ src: '#' } Radiant
      %dd{ data: { filter: '.cushion'} }
        %a{ src: '#' } Cushion
      %dd{ data: { filter: '.emerald'} }
        %a{ src: '#' } Emerald
      %dd{ data: { filter: '.oval'} }
        %a{ src: '#' } Oval
      %dd{ data: { filter: '.asscher'} }
        %a{ src: '#' } Asscher
      %dd{ data: { filter: '.marquise'} }
        %a{ src: '#' } Marquise
      %dd{ data: { filter: '.heart'} }
        %a{ src: '#' } Heart
      %dd{ data: { filter: '.pear'} }
        %a{ src: '#' } Pear
      %dd{ data: { filter: '.trillion'} }
        %a{ src: '#' } Trillion
%hr{ style: 'margin: 0;'}

.row
  #engagement-ring-archive
    = partial :ring, collection: @rings
.row.no-items-available.text-center{ style: 'display: none; margin-bottom: 20px;' }
  .large-12.columns
    %h4 Nothing here. Trying adjusting your filters.
